@model WinInvestmentTracker.Models.InvestmentRisk

@{
    ViewBag.Title = "Details";
}

<div>
    <h1><a id="@Html.NameFor(model => model.Name)" data-pk="@Model.ID" data-title="Enter data" data-url="@Url.Action("Update","Risk", new { ID = @Model.ID})">@Html.DisplayFor(model => model.Name)</a></h1>
    <h4>Investment Risk</h4>
    <hr />
    <dl class="dl-horizontal">

        <dt>
            @Html.DisplayNameFor(model => model.Description)
        </dt>

        <dd>
            <a id="@Html.NameFor(model => model.Description)" data-pk="@Model.ID" data-title="Enter data" data-url="@Url.Action("Update", "Risk", new {ID = @Model.ID})">@Html.DisplayFor(model => model.Description)</a>
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Type)
        </dt>

        <dd>
            <a id="@Html.NameFor(model => model.Type)" data-pk="@Model.ID" data-title="Enter data" data-url="@Url.Action("Update", "Risk", new {ID = @Model.ID})">@Html.DisplayFor(model => model.Type)</a>
        </dd>



    </dl>
</div>


@section Scripts {
    <script type="text/javascript">
        $(document).ready(function () {
            $.fn.editable.defaults.mode = 'inline';
            $('#@Html.NameFor(model => model.Name)').editable();
            $('#@Html.NameFor(model => model.Description)').editable();
            $('#@Html.NameFor(model => model.Type)').editable();
        });
    </script>
}


